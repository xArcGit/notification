{
  "name": "notification",
  "version": "1.0.0",
  "description": "Notification manager",
  "license": "XAG",
  "type": "module",
  "scripts": {
    "client:dev": "bunx --bun vite --config client/vite.config.ts",
    "client:build": "bunx --bun vite build --config client/vite.config.ts",
    "client:preview": "bunx --bun vite preview --config client/vite.config.ts",
    "server:dev": "bun run --hot ./server/src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^1.9.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "lint-staged": "^15.2.10",
    "globals": "^15.11.0",
    "vite": "^5.4.10"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "hono": "^4.6.8",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "lint-staged": {
    "*.{ts,js}": "bunx biome check --apply-unsafe",
    "**/*": "bunx biome format --write --files-ignore-unknown=true"
  }
}
